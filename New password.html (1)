 <body> 
  <h4>Write new password: </h4> 
  <div class="container"> 
   <input id="input" type="password" placeholder="type your password..."> <button onclick="Chose()"></button> 
  </div> 
  <h4>Confirm The new password: </h4> 
  <div class="container 2"> 
   <input id="kimput" type="password" placeholder="Confirm password..."> <button onclick="Ib()"></button> 
  </div> <button onclick="Yamaha()">Submit</button> 
  <p></p> <a href="Https://chess.com"></a> 
 
<script type="text/javascript" id="dcoder_script">function Chose() {
  const el = document.querySelector("#input");
  const ef = document.querySelector("#input").value;
  el.type = "text";
}
function Ib() {
  const eg = document.querySelector("#kimput");
  const ek = document.querySelector("#kimput").value;
  eg.type = "text";
}
function Yamaha() {
const p = document.querySelector("p");
const ef = document.querySelector("#input").value;
const ek = document.querySelector("#kimput").value;
let oi = document.querySelector("a");
if (ek === ef) {
  p.innerHTML = "Password set";
  p.setAttribute('style','Color: Green; font-weight: Bold;');
oi.innerHTML = "Chess"
} else if (ek !== ef) {
  p.innerHTML = "Try again";
  p.setAttribute('style','color: red; font-weight: Bold;');
} 
}</script></body></html>